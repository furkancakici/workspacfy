{
    "compilerOptions": {
        "target": "ES2021",
        "module": "NodeNext",
        "rootDir": "./src",
        "moduleResolution": "NodeNext",
        "baseUrl": "./src",
        "paths": {
            "@/*": ["./*"]
        },
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts", "@types"],
    "exclude": ["node_modules", "test", "dist", "**/*spec.ts"]
}
